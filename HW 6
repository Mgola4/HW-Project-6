DOM MANUPULATION IDEAS 
let cheeseButton = document.getElementById("cheeseButton")
let cheese = document.getElementById("cheese")
cheeseButton.addEventListener("click", function () {
    cheese.classList.toggle("hidden")
    cheeseButton.classList.toggle("selected")
})
